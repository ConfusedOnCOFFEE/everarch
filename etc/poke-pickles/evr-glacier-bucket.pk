type EVR_GB_Header =
  struct
  {
    byte[3] magic == ['E', 'V', 'B'];
    offset<uint<32>, B> end_pointer;
  };

type EVR_GB_Blob =
  struct
  {
    byte[224 / 8] key;
    uint<8> flags;
    uint<64> last_modified;
    offset<uint<32>, B> data_size;
    uint<8> checksum;
  };
